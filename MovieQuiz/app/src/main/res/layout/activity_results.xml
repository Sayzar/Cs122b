<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/title"
            android:text="Results"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="32sp"/>

    <TextView
            android:id="@+id/correctAnswers"
            android:text="Correct Answers: "
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:textStyle="bold"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/incorrectAnswers"
            android:text="Incorrect Answers: "
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/correctAnswers"
            android:textStyle="bold"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/avgTimePerQuestion"
            android:text="Average Time per Question (ms): "
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/incorrectAnswers"
            android:textStyle="bold"
            android:textSize="24sp"/>

    <TextView
            android:id="@+id/returnToMenu"
            android:text="End Quiz"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/avgTimePerQuestion"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="32sp"/>

</RelativeLayout>