<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group9.cs122b.moviequiz.StatisticsActivity">

    <TextView
        android:id="@+id/title"
        android:text="Statistics"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/quizzesTaken"
        android:text="Quizzes Taken: "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/correctAnswers"
        android:text="Correct Answers: "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/quizzesTaken"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/incorrectAnswers"
        android:text="Incorrect Answers: "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/correctAnswers"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/avgTimePerQuestion"
        android:text="Average Time per Question (ms): "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/incorrectAnswers"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/returnToMenu"
        android:text="Back to Menu"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/avgTimePerQuestion"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="32sp"/>
</RelativeLayout>
